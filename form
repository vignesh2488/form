<?php
if(isset($_POST["submit"])){
	$name = $_POST['name'];
	$email = $_POST['email'];
	$phone = $_POST['phone'];
	$password = $_POST['password'];
	
	echo "<h2>Your Details:</h2>";
	echo "Name: ".$name."<br>";
	echo "Email: ".$email."<br>";
	echo "Phone Number: ".$phone."<br>";
	echo "Password: ".$password."<br>";
}
?>
